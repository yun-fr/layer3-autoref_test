{
  "manifest_version": 2,
  "name": "Layer3 Ref Switcher",
  "version": "2",
  "description": "Multitools on app.layer3.xyz made by Yun",
  "permissions": [
    "storage",
    "*://*.layer3.xyz/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.layer3.xyz/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "72": "images/icon72.png"
    }
  },
  "icons": {
    "72": "images/icon72.png"
  }
}